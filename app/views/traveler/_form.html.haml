.row
  .large-4.large-centered.columns
    / = render(:partial => 'shared/errors', :locals => {:object => @user})
    = form_for @traveler, :url => travelers_path, :remote => true do |f|
      = f.label :name
      = f.text_field :name
      = f.label :email
      = f.text_field :email
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      = button_to_function('Cancel', 'cancel_subscriber_form()', :class => 'button small alert')
      = f.submit nil, :class => 'button small success'


