%h3 ***seating chart here***

.row.white
  .large-12.large-centered.columns
    = "This is the voyage id  #{@voyage.id}"
    = "This is the user id #{@auth.id}"

    #seatchart
      - @voyage.zeppelin.number_of_rows.times do
        - j = 1
        .seat_row
          - @voyage.zeppelin.seats.where(row: j).each do |seat|
            .seat_column{:'data-row' => "#{seat.row}", :'data-column' => "#{seat.column}", :'data-occupied' => "#{seat.in?(@voyage.seats) ? true : false}"}
              .seat_numbers= "#{seat.row} - #{seat.column}"
            - j += 1
          .clear

%script
  ="var user_id = #{@auth.id}"
  ="var voyage_id = #{@voyage.id}"